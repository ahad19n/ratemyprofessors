<div class="flex items-center pt-[100px]">

    <!-- Quality / Difficulty -->
    <div class="flex flex-col items-center w-fit pr-[40px]">
        <div class="flex flex-col items-center">
            <div class="font-bold">QUALITY</div>
            <div class="h-[80px] w-[80px] flex items-center justify-center font-black text-4xl <%= ratingQualityScore <= 2 ? 'bg-[#ff9c9c]' : (ratingQualityScore > 3 ? 'bg-[#7ff6c3]' : 'bg-[#fff170]') %>">
                <%= ratingQualityScore %>
            </div>
        </div>
        <div class="flex flex-col items-center pt-[30px]">
            <div class="font-bold">DIFFICULTY</div>
            <div class="h-[80px] w-[80px] flex items-center justify-center font-black text-4xl">
                <%= ratingDifficultyScore %>
            </div>
        </div>
    </div>

    <!-- Side Container -->
    <div class="flex flex-col w-[700px]">

        <div class="flex justify-between">
            <h3 class="font-black"><%= ratingCourseCode %></h3>
            <p class="font-bold"><%= ratingPrettyDate %></p>
        </div>

        <div class="flex justify-between pt-[20px]">
            <p>For Credit: <strong>Yes</strong></p>
            <p>Attendance: <strong>Mandatory</strong></p>
            <p>Grade: <strong>Drop/Withdrawal</strong></p>
            <p>Textbook: <strong>Yes</strong></p>
        </div>

        <div class="pt-[20px]"><%= ratingTextReview %></div>

        <div class="flex justify-between pt-[20px]">
            <div class="flex items-center justify-between w-[150px]">
                <div class="font-bold">Helpful</div>

                <button class="relative group">
                    <img src="/assets/images/thumbs-up-black.svg" alt="Helpful">
                    <span class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 hidden group-hover:block rounded bg-gray-800 px-2 py-1 text-xs text-white whitespace-nowrap">
                        Helpful
                    </span>
                </button>

                <div class="font-bold"><%= ratingHelpfulVotes %></div>

                <button class="relative group">
                    <img src="/assets/images/thumbs-down-black.svg" alt="Not Helpful">
                    <span class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 hidden group-hover:block rounded bg-gray-800 px-2 py-1 text-xs text-white whitespace-nowrap">
                        Not Helpful
                    </span>
                </button>

            </div>
            <div class="flex">
                <button class="relative group">
                    <img src="/assets/images/share.svg" alt="Share">
                    <span class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 hidden group-hover:block rounded bg-gray-800 px-2 py-1 text-xs text-white whitespace-nowrap">
                        Share this review
                    </span>
                </button>
                <a href="/report/293/583" class="relative group">
                    <img src="/assets/images/report.svg">
                    <span class="absolute left-1/2 -translate-x-1/2 bottom-full mb-2 hidden group-hover:block rounded bg-gray-800 px-2 py-1 text-xs text-white whitespace-nowrap">
                        Report this review
                    </span>
                </a>
            </div>
        </div>

    </div>
</div>