<% title = 'Contact' %>

<section
	class="bg-[#CAD2C5] relative flex items-center justify-center overflow-hidden"
	style="min-height: calc(100vh - 4rem)">
	<!-- Card -->
	<div class="relative z-10 bg-white text-[#2F3E46] max-w-3xl w-full rounded-2xl shadow-2xl p-8 md:px-12 md:py-10">
		<h2 class="text-3xl font-bold mb-2 text-center">Contact Us</h2>
		<p class="text-center mb-8">Have questions or feedback? We'd love to hear from you.</p>

		<form class="space-y-5">
			<fieldset class="grid md:grid-cols-2 gap-6">
				<legend class="sr-only">Contact form</legend>

				<div>
					<label
						for="contact-name"
						class="block text-[#2F3E46] font-semibold mb-1 text-sm">
						Name
					</label>
					<input
						id="contact-name"
						name="name"
						type="text"
						required
						class="w-full px-4 py-2.5 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
						placeholder="Your name" />
				</div>

				<div>
					<label
						for="contact-email"
						class="block text-[#2F3E46] font-semibold mb-1 text-sm">
						Email
					</label>
					<input
						id="contact-email"
						name="email"
						type="email"
						required
						class="w-full px-4 py-2.5 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
						placeholder="you@example.com" />
				</div>
			</fieldset>

			<div>
				<label
					for="contact-subject"
					class="block text-[#2F3E46] font-semibold mb-1 text-sm">
					Subject
				</label>
				<input
					id="contact-subject"
					name="subject"
					type="text"
					class="w-full px-4 py-2.5 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
					placeholder="What's this about?" />
			</div>

			<div>
				<label
					for="contact-message"
					class="block text-[#2F3E46] font-semibold mb-1 text-sm">
					Message
				</label>
				<textarea
					id="contact-message"
					name="message"
					rows="5"
					required
					class="w-full px-4 py-2.5 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm resize-none text-sm"
					placeholder="Tell us what's on your mind..."></textarea>
			</div>

			<div class="pt-1 text-center">
				<button
					type="submit"
					class="w-full md:w-auto bg-[#84A98C] text-white font-bold px-10 py-3 rounded-xl transition shadow-lg hover:shadow-2xl transform hover:-translate-y-1 text-sm">
					Send Message
				</button>
			</div>
		</form>
	</div>
</section>
