<% title = 'Contact' %>

<section class="bg-[#2F3E46] min-h-screen relative px-6 py-12 flex items-center justify-center overflow-hidden">
  <!-- Background blobs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-72 h-72 bg-[#84A98C] rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-[#52796F] rounded-full blur-3xl animate-pulse delay-1000"></div>
  </div>

  <!-- Card -->
  <div class="relative z-10 bg-[#CAD2C5] max-w-3xl w-full rounded-2xl shadow-2xl p-8 md:p-12">
    <h2 class="text-3xl font-bold text-[#2F3E46] mb-2 text-center">
      Contact Us
    </h2>
    <p class="text-center text-[#354F52] mb-8">
      Have questions or feedback? We'd love to hear from you.
    </p>

    <form class="space-y-6">
      <fieldset class="grid md:grid-cols-2 gap-6">
        <legend class="sr-only">Contact form</legend>

        <div>
          <label for="contact-name" class="block text-[#2F3E46] font-semibold mb-1 text-sm">
            Name
          </label>
          <input
            id="contact-name"
            name="name"
            type="text"
            required
            class="w-full px-4 py-3 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
            placeholder="Your name" />
        </div>

        <div>
          <label for="contact-email" class="block text-[#2F3E46] font-semibold mb-1 text-sm">
            Email
          </label>
          <input
            id="contact-email"
            name="email"
            type="email"
            required
            class="w-full px-4 py-3 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
            placeholder="you@example.com" />
        </div>
      </fieldset>

      <div>
        <label for="contact-subject" class="block text-[#2F3E46] font-semibold mb-1 text-sm">
          Subject
        </label>
        <input
          id="contact-subject"
          name="subject"
          type="text"
          class="w-full px-4 py-3 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
          placeholder="What's this about?" />
      </div>

      <div>
        <label for="contact-message" class="block text-[#2F3E46] font-semibold mb-1 text-sm">
          Message
        </label>
        <textarea
          id="contact-message"
          name="message"
          rows="5"
          required
          class="w-full px-4 py-3 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm resize-none text-sm"
          placeholder="Tell us what's on your mind..."></textarea>
      </div>

      <div class="pt-2 text-center">
        <button
          type="submit"
          class="w-full md:w-auto bg-gradient-to-r from-[#84A98C] to-[#52796F] hover:from-[#52796F] hover:to-[#84A98C] text-white font-bold px-10 py-3 rounded-xl transition shadow-lg hover:shadow-2xl transform hover:-translate-y-1 text-sm">
          Send Message
        </button>
      </div>
    </form>
  </div>
</section>