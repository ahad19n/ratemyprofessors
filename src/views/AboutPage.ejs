<% title = 'About Us' %>
<section
	class="bg-[#CAD2C5] min-h-screen py-16 px-6"
	aria-labelledby="about-heading">
	<div class="max-w-7xl mx-auto">
		<!-- About Us Banner -->
		<header
			class="flex flex-col md:flex-row items-center gap-12 mb-16"
			role="banner"
			aria-labelledby="about-heading">
			<figure
				class="shrink-0"
				aria-hidden="false">
				<div class="bg-white text-[#2F3E46] rounded-lg shadow-lg w-64 h-64 flex items-center justify-center p-6">
					<img
						src="/images/big-logo.svg"
						alt="Rate My Professor logo"
						class="w-full h-full object-contain" />
				</div>
				<figcaption class="sr-only">Rate My Professor logo</figcaption>
			</figure>

			<div class="flex-1">
				<h1
					id="about-heading"
					class="text-4xl md:text-5xl font-bold text-[#2F3E46] mb-6">
					About RMP
				</h1>
				<p class="text-lg text-[#354F52] leading-relaxed mb-4">RMP (Rate My Professor) is a platform dedicated to empowering students through transparent and honest feedback about their professors and courses.</p>
				<p class="text-lg text-[#354F52] leading-relaxed">We believe informed decisions lead to better academic experiences, and our community-driven approach helps students make the right choices for their education.</p>
			</div>
		</header>

		<!-- Mission & Vision -->
		<section
			class="grid md:grid-cols-2 gap-8 mb-16"
			aria-labelledby="mission-heading">
			<article
				class="bg-white rounded-lg shadow-md p-8"
				aria-labelledby="mission-heading">
				<h2
					id="mission-heading"
					class="text-2xl font-bold text-[#2F3E46] mb-4">
					Our Mission
				</h2>
				<p class="text-[#354F52] leading-relaxed">To provide students with a trusted platform where they can share and access authentic reviews about professors, helping them make informed decisions about their academic journey.</p>
			</article>

			<article
				class="bg-white rounded-lg shadow-md p-8"
				aria-labelledby="vision-heading">
				<h2
					id="vision-heading"
					class="text-2xl font-bold text-[#2F3E46] mb-4">
					Our Vision
				</h2>
				<p class="text-[#354F52] leading-relaxed">To create a global community where educational transparency is the norm, fostering better communication between students and educators for improved learning outcomes.</p>
			</article>
		</section>

		<!-- Why Chose RMP -->

		<section
			aria-labelledby="why-heading"
			class="mb-16">
			<h2
				id="why-heading"
				class="text-3xl font-bold text-[#2F3E46] mb-8 text-center">
				Why Choose RMP?
			</h2>

			<ul
				class="grid md:grid-cols-3 gap-8"
				role="list">
				<li
					class="bg-white rounded-lg shadow-md p-6 text-center"
					role="article"
					aria-labelledby="feat-1">
					<div
						class="w-16 h-16 bg-[#CAD2C5] rounded-full flex items-center justify-center mx-auto mb-4"
						aria-hidden="true">
						<img
							src="/images/user-lock-solid-full.svg"
							alt=""
							class="w-8 h-8 text-white"
							aria-hidden="true" />
					</div>
					<h3
						id="feat-1"
						class="text-xl font-bold text-[#2F3E46] mb-3">
						Anonymous Reviews
					</h3>
					<p class="text-[#354F52]">Share your honest opinions without revealing your identity.</p>
				</li>

				<li
					class="bg-white rounded-lg shadow-md p-6 text-center"
					role="article"
					aria-labelledby="feat-2">
					<div
						class="w-16 h-16 bg-[#84A98C] rounded-full flex items-center justify-center mx-auto mb-4"
						aria-hidden="true">
						<img
							src="/images/people-group-solid-full.svg"
							alt=""
							class="w-8 h-8 text-white"
							aria-hidden="true" />
					</div>
					<h3
						id="feat-2"
						class="text-xl font-bold text-[#2F3E46] mb-3">
						Community Driven
					</h3>
					<p class="text-[#354F52]">Built by students, for students, with real experiences.</p>
				</li>

				<li
					class="bg-white rounded-lg shadow-md p-6 text-center"
					role="article"
					aria-labelledby="feat-3">
					<div
						class="w-16 h-16 bg-[#CAD2C5] rounded-full flex items-center justify-center mx-auto mb-4"
						aria-hidden="true">
						<img
							src="/images/circle-check-regular-full.svg"
							alt=""
							class="w-8 h-8 text-white"
							aria-hidden="true" />
					</div>
					<h3
						id="feat-3"
						class="text-xl font-bold text-[#2F3E46] mb-3">
						Verified Ratings
					</h3>
					<p class="text-[#354F52]">Quality-controlled reviews you can trust.</p>
				</li>
			</ul>
		</section>

		<!-- Contact Form -->
		<section
			aria-labelledby="contact-heading"
			class="bg-white rounded-lg shadow-lg p-8 md:p-12">
			<h2
				id="contact-heading"
				class="text-3xl font-bold text-[#2F3E46] mb-6 text-center">
				Contact Us
			</h2>
			<p class="text-center text-[#354F52] mb-8">Have questions or feedback? We'd love to hear from you!</p>

			<form
				class="max-w-2xl mx-auto space-y-6"
				action="/contact"
				method="post"
				novalidate>
				<fieldset
					class="grid md:grid-cols-2 gap-6"
					aria-describedby="contact-desc">
					<legend
						id="contact-desc"
						class="sr-only">
						Contact form
					</legend>

					<div>
						<label
							for="contact-name"
							class="block text-[#2F3E46] font-semibold mb-2"
							>Name</label
						>
						<input
							id="contact-name"
							name="name"
							type="text"
							required
							class="w-full px-4 py-3 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition"
							placeholder="Your name" />
					</div>

					<div>
						<label
							for="contact-email"
							class="block text-[#2F3E46] font-semibold mb-2"
							>Email</label
						>
						<input
							id="contact-email"
							name="email"
							type="email"
							required
							class="w-full px-4 py-3 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition"
							placeholder="your.email@example.com" />
					</div>
				</fieldset>

				<div>
					<label
						for="contact-subject"
						class="block text-[#2F3E46] font-semibold mb-2"
						>Subject</label
					>
					<input
						id="contact-subject"
						name="subject"
						type="text"
						class="w-full px-4 py-3 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition"
						placeholder="What's this about?" />
				</div>

				<div>
					<label
						for="contact-message"
						class="block text-[#2F3E46] font-semibold mb-2"
						>Message</label
					>
					<textarea
						id="contact-message"
						name="message"
						rows="5"
						required
						class="w-full px-4 py-3 border-2 border-[#CAD2C5] rounded-lg focus:outline-none focus:border-[#84A98C] transition resize-none"
						placeholder="Tell us what's on your mind..."></textarea>
				</div>

				<div class="text-center">
					<button
						type="submit"
						class="bg-[#84A98C] hover:bg-[#52796F] text-white font-semibold px-8 py-3 rounded-lg transition duration-300 shadow-md hover:shadow-lg">
						Send Message
					</button>
				</div>
			</form>

			<address class="mt-8 text-center not-italic text-[#354F52]">
				Or email us at
				<a
					href="mailto:hello@rmp.example"
					class="text-[#2F3E46] underline"
					>rmp@gmail.com</a
				>
			</address>
		</section>
	</div>
</section>
