<form
	action="/search"
	class="w-full">
	<div class="relative w-full">
		<input name="q" type="text" required placeholder="Search for a professor" value="<%= (typeof value !== "undefined") ? value : '' %>" class="w-full px-4 py-2 pr-20 rounded-full bg-[#354F52] text-white placeholder-gray-300 focus:outline-none focus:ring-2 focus:ring-[#84A98C]" />
		<button
			type="submit"
			aria-label="Search"
			class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-300 hover:text-white">
			🔍
		</button>
	</div>
</form>
