<!-- Hero Section -->
<section class="w-full min-h-[50vh] flex flex-col items-center justify-center bg-center bg-cover bg-[linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)),url(/images/background.jpg)] p-6 text-white">
  <img class="w-48 sm:w-64 md:w-80 lg:w-96" src="/images/big-logo.svg" alt="Rate My Professors Logo">

  <h1 class="text-xl sm:text-2xl md:text-3xl my-6 font-bold text-center">
    Find a professor
  </h1>

  <form action="/search" method="get" class="w-full flex flex-col sm:flex-row items-center justify-center gap-3">
    <input
      name="query"
      type="text"
      placeholder="Search by name, subject, or school"
      class="w-full sm:w-4/5 md:w-2/3 lg:w-[30vw] h-12 px-6 rounded-full text-black bg-white focus:outline-none"
    >
    <button
      type="submit"
      class="px-6 py-2 bg-blue-700 hover:bg-blue-800 text-white font-bold rounded-full transition"
    >
      Search
    </button>
  </form>
</section>

<!-- Feature Section -->
<section class="w-full flex flex-col md:flex-row items-center justify-center bg-white text-black py-10 px-4 gap-8">
  
  <!-- Feature 1 -->
  <div class="flex flex-col items-center text-center px-4 py-6">
    <img class="w-40 sm:w-48 mb-4" src="/images/pencil-lady.svg" alt="Edit Ratings">
    <h2 class="text-xl sm:text-2xl font-bold leading-tight">
      Manage and edit your<br>ratings
    </h2>
  </div>

  <!-- Feature 2 -->
  <div class="flex flex-col items-center text-center px-4 py-6">
    <img class="w-40 sm:w-48 mb-4" src="/images/mystery-lady.svg" alt="Anonymous Ratings">
    <h2 class="text-xl sm:text-2xl font-bold leading-tight">
      Your ratings are<br>always anonymous
    </h2>
  </div>

  <!-- Feature 3 -->
  <div class="flex flex-col items-center text-center px-4 py-6">
    <img class="w-40 sm:w-48 mb-4" src="/images/thumb-war.svg" alt="Like or Dislike">
    <h2 class="text-xl sm:text-2xl font-bold leading-tight">
      Like or dislike ratings
    </h2>
  </div>

</section>
