			<div class="max-w-5xl mx-auto relative z-10 w-full h-full flex flex-col justify-center items-center">
				<!-- Logo -->
				<!-- <div class="mb-4">
					<img
						src="/images/small-logo.svg"
						alt="RMP Logo"
						width="100"
						height="100"
						class="transform hover:scale-105 transition-transform duration-300" />
				</div> -->

				<div class="text-center mb-8 relative z-10">
					<h1 class="text-xl md:text-4xl text-white font-medium animate-fade-in leading-relaxed">Sign up without an email. Stay anonymous by design.</h1>

					<a
						href="#features"
						class="group inline-flex items-center gap-2 mt-5 px-6 py-2.5 rounded-full bg-white/5 hover:bg-[#84A98C]/20 border border-white/10 hover:border-[#84A98C] backdrop-blur-md transition-all duration-300 shadow-lg hover:shadow-[#84A98C]/20">
						<span class="text-gray-300 group-hover:text-white font-medium text-sm tracking-wide transition-colors"> Perks of having an account </span>

						<svg
							class="w-4 h-4 text-[#84A98C] transform group-hover:translate-y-0.5 transition-transform duration-300"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M19 9l-7 7-7-7"></path>
						</svg>
					</a>
				</div>

				<!-- Sign In/Sign Up Form -->
				<div class="max-w-md w-full">
					<div class="bg-[#CAD2C5] rounded-2xl shadow-2xl p-6 md:p-8 transform hover:scale-[1.02] transition-transform duration-300">
						<!-- Toggle Buttons -->
						<div class="flex gap-2 mb-6 bg-white/50 rounded-xl p-1">
							<button
								id="signinBtn"
								class="flex-1 py-2 rounded-lg font-bold transition-all duration-300 bg-[#84A98C] text-white shadow-md text-sm">
								Sign In
							</button>
							<button
								id="signupBtn"
								class="flex-1 py-2 rounded-lg font-bold transition-all duration-300 text-[#354F52] hover:bg-white/50 text-sm">
								Sign Up
							</button>
						</div>

						<!-- Sign In -->
						<form
							id="signinForm"
							class="space-y-4"
							method="post"
							action="/auth/login">
							<div>
								<h2 class="text-2xl font-bold text-[#2F3E46] mb-1">Welcome Back!</h2>
								<p class="text-[#354F52] text-sm">Sign In to your anonymous account.</p>
								<% if (typeof error !== 'undefined') { %>
								<div
									role="alert"
									class="text-sm text-red-600 bg-red-50 rounded p-2">
									<%= error %>
								</div>
								<% } %>
							</div>

							<div>
								<label class="block text-[#2F3E46] font-semibold mb-1 text-sm">Username</label>
								<input
									type="text"
									name="username"
									class="w-full px-3 py-2 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
									placeholder="Enter your username"
									required />
							</div>

							<div>
								<label class="block text-[#2F3E46] font-semibold mb-1 text-sm">Password</label>
								<input
									type="password"
									name="password"
									class="w-full px-3 py-2 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
									placeholder="Enter your password"
									required />
							</div>

							<div class="flex items-center justify-between text-xs">
								<label class="flex items-center cursor-pointer group">
									<input
										type="checkbox"
										class="w-4 h-4 text-[#84A98C] border-gray-300 rounded focus:ring-[#84A98C]" />
									<span class="ml-2 text-[#354F52] group-hover:text-[#2F3E46]">Remember me</span>
								</label>
							</div>

							<button
								type="submit"
								class="w-full bg-linear-to-r from-[#84A98C] to-[#52796F] hover:from-[#52796F] hover:to-[#84A98C] text-white font-bold py-3 rounded-xl transition-all duration-300 shadow-lg hover:shadow-2xl transform hover:-translate-y-1 text-sm">
								Sign In
							</button>
						</form>

						<!-- Sign Up Form (Hidden by default) -->
						<form
							id="signupForm"
							class="space-y-4 hidden"
							method="post"
							action="/auth/signup">
							<div>
								<h2 class="text-2xl font-bold text-[#2F3E46] mb-1">Welcome Aboard Mate!</h2>
								<p class="text-[#354F52] text-sm">Sign Up for your anonymous account.</p>
							</div>

							<div>
								<label
									for="signup-username"
									class="block text-[#2F3E46] font-semibold mb-1 text-sm"
									>Username</label
								>
								<input
									id="signup-username"
									name="username"
									type="text"
									autocomplete="username"
									placeholder="Choose a username"
									class="w-full px-3 py-2 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
									required />
							</div>

							<div>
								<label
									for="signup-password"
									class="block text-[#2F3E46] font-semibold mb-1 text-sm"
									>Password</label
								>
								<input
									id="signup-password"
									name="password"
									type="password"
									autocomplete="new-password"
									minlength="8"
									class="w-full px-3 py-2 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm"
									placeholder="Create a strong password"
									required />
							</div>

							<div>
								<label
									for="signup-password-confirm"
									class="block text-[#2F3E46] font-semibold mb-1 text-sm"
									>Confirm Password</label
								>
								<input
									id="signup-password-confirm"
									name="confirm_password"
									type="password"
									autocomplete="new-password"
									minlength="8"
									placeholder="Confirm your password"
									required
									class="w-full px-3 py-2 bg-white border-2 border-transparent rounded-lg focus:outline-none focus:border-[#84A98C] transition shadow-sm text-sm" />
							</div>

							<button
								type="submit"
								class="w-full bg-linear-to-r from-[#84A98C] to-[#52796F] hover:from-[#52796F] hover:to-[#84A98C] text-white font-bold py-3 rounded-xl transition-all duration-300 shadow-lg hover:shadow-2xl transform hover:-translate-y-1 text-sm">
								Create Account
							</button>
						</form>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section
			id="features"
			class="bg-[#2F3E46] py-20 px-6">
			<div class="max-w-5xl mx-auto relative z-10">
				<!-- Anonymous Features Banner -->
				<div class="bg-linear-to-r from-[#52796F]/20 to-[#84A98C]/20 backdrop-blur-lg rounded-2xl p-8 border border-white/10 shadow-2xl">
					<div class="flex gap-4 mb-4 items-center">
						<div class="w-16 h-16 bg-linear-to-br from-[#84A98C] to-[#52796F] rounded-2xl flex items-center justify-center shrink-0 shadow-lg transform hover:rotate-12 transition-transform duration-300">
							<svg
								class="w-8 h-8 text-white"
								fill="none"
								stroke="currentColor"
								viewBox="0 0 24 24">
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									stroke-width="2.5"
									d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
							</svg>
						</div>
						<div class="flex-1">
							<h3 class="text-2xl font-bold text-white mb-2"><span class="whitespace-nowrap">Stay Anonymous,</span> Stay Safe</h3>
						</div>
					</div>
					<div class="mb-4">
						<p class="text-gray-300 leading-relaxed">Share honest feedback without any concerns.</p>
					</div>

					<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
						<div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-1">
							<div class="text-[#84A98C] font-bold text-lg mb-1">üëç Upvote & Downvote</div>
							<p class="text-gray-400 text-sm">Help others find useful reviews</p>
						</div>
						<div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-1">
							<div class="text-[#84A98C] font-bold text-lg mb-1">üö® Report Reviews</div>
							<p class="text-gray-400 text-sm">Keep the community safe</p>
						</div>
						<div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-1">
							<div class="text-[#84A98C] font-bold text-lg mb-1">üí¨ Write Comments</div>
							<p class="text-gray-400 text-sm">Join the conversation</p>
						</div>
						<div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-1">
							<div class="text-[#84A98C] font-bold text-lg mb-1">‚úèÔ∏è Edit Reviews</div>
							<p class="text-gray-400 text-sm">Update your feedback anytime</p>
						</div>
						<div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-1">
							<div class="text-[#84A98C] font-bold text-lg mb-1">‚≠ê Save Favorites</div>
							<p class="text-gray-400 text-sm">Bookmark professors</p>
						</div>
						<div class="bg-white/5 backdrop-blur-sm rounded-xl p-4 border border-white/10 hover:bg-white/10 transition-all duration-300 transform hover:-translate-y-1">
							<div class="text-[#84A98C] font-bold text-lg mb-1">üìä Track History</div>
							<p class="text-gray-400 text-sm">View your contributions</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<script>
			const signinBtn = document.getElementById("signinBtn");
			const signupBtn = document.getElementById("signupBtn");
			const signinForm = document.getElementById("signinForm");
			const signupForm = document.getElementById("signupForm");
			const activeClasses = ["bg-[#84A98C]", "text-white", "shadow-md"];
			const inactiveClasses = ["text-[#354F52]", "hover:bg-white/50"];
			function switchTab(isSignIn) {
				if (isSignIn) {
					signinBtn.classList.add(...activeClasses);
					signinBtn.classList.remove(...inactiveClasses);
					signupBtn.classList.remove(...activeClasses);
					signupBtn.classList.add(...inactiveClasses);
					signinForm.classList.remove("hidden");
					signupForm.classList.add("hidden");
				} else {
					signupBtn.classList.add(...activeClasses);
					signupBtn.classList.remove(...inactiveClasses);
					signinBtn.classList.remove(...activeClasses);
					signinBtn.classList.add(...inactiveClasses);
					signupForm.classList.remove("hidden");
					signinForm.classList.add("hidden");
				}
			}
			signinBtn.addEventListener("click", () => switchTab(true));
			signupBtn.addEventListener("click", () => switchTab(false));
		</script>
	</body>
